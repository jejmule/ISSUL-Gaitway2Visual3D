BoxLayout:
    orientation: 'vertical'
    Label:
        text: 'Gaitway2Visual3D'
        font_size: 32
        size_hint_y: 0.1
    TextInput:
        id: host_path
        text: ""   
        size_hint_y: 0.1
    FileChooserListView:
        id: filechooser
        dirselect: True
        path:'.'
        filters: ['*.c3d','*.txt']
        on_selection : app.list_files(filechooser.selection[0])
    TextInput:
        id: text_input
        text: ""
        size_hint_y: 0.3
    Button:
        text: 'Process'
        on_press: app.process_files()
        size_hint_y: 0.2